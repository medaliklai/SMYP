<%- include('../partiels/header.ejs') %>
    <div class="main-content">
        <%- include('../menu.ejs') %> 
        <div class="content">
            <h2>Liste des Cultures</h2>
            <button class="btn btn-info"><a href="/ajouter_culture">Ajouter</a></button>
            <% if (cultures.length>0){ %>
            <table  class="table">
            <tr>
                <td>Valeur</td>
                <td>Ann√©e</td>

            </tr>
            <% for( culture of cultures ) { %>
                <tr>

                    <td><%= culture.valeur %> </td>
                    <td> <%= culture.annee %></td>

                    <td><button class="btn btn-danger" data-doc="<%= culture._id %> ">Supprimer</button></td>
                    <td><button class="btn btn-primary"><a href="/modifier_culture/<%= culture._id %> ">Modifier</a></button></td>

                    </tr>
            <% } %>


        </table>
            <% } else{ %>
<div class="vide">Aucune culture</div>
                <% }  %>

    </div>
    </div>
    <script>
        const btnSupprimer = document.querySelector('.btn-danger');
        btnSupprimer.addEventListener('click',(e)=>{
            fetch(`/culture/${btnSupprimer.dataset.doc}`,{
                method:'DELETE'
            })
            .then((result)=>{
                if(result.ok){
                    location.assign('/culture');
                }
            })
        })
    </script>

   